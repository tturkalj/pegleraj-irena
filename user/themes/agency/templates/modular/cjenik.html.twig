<section id="cjenik">
    <div class="container">
        <div class="row"> 
            <div class="col-lg-12 text-center">
                <h1>{{ page.header.title }}<h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-11">
                <table class="table text-center table-striped">
                    <thead>
                        <tr>
                            <th>Artikl</th>
                            <th>Peglanje</th>
                            <th>Peglanje + Pranje</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in page.header.cjenik %}
                        <tr>
                            <td>{{ item.artikl }}</td>
                            <td>{{ item.peglanje }} kn</td>
                            <td>{{ item.pranjepeglanje }} {% if item.pranjepeglanje != '-' %} kn {% endif %}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                {% for item in page.header.uvjeti %}
                    <p class="text">{{ item }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

